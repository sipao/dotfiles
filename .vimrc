syntax on
set encoding=utf-8
set number
set tabstop=4
set softtabstop=4
set expandtab
set shiftwidth=4

set backspace=indent,eol,start

set mouse=a
" マウスドラッグ
set ttymouse=xterm2

set clipboard=unnamed,autoselect

set showtabline=2


" 隠しファイルを表示する
let NERDTreeShowHidden = 1

" デフォルトでツリーを表示させる
let g:nerdtree_tabs_open_on_console_startup=1
